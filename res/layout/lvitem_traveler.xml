<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal" >
    
    <ImageView 
        android:layout_marginRight="10dp"
        android:id="@+id/traitem_img_head"
        android:src="@drawable/tra1"
        android:scaleType="fitXY"
        android:layout_width="74dp"
        android:layout_height="74dp"/>

    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="74dp"
		android:layout_weight="7">
        
        <TextView 
            android:id="@+id/traitem_tv_name"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/traitem_tv_des"
            android:textSize="13dp"
            android:textColor="#7c7c7c"
            android:text="des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/traitem_tv_name"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_weight="1">

        <ImageButton 
            android:id="@+id/traitem_img_dialog"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#00000000"
            android:src="@drawable/tra_dialog"/>

        <ImageButton 
            android:id="@+id/traitem_imgbt_location"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/traitem_img_dialog"
            android:background="#00000000"
            android:src="@drawable/location"/>
        
        
    </RelativeLayout>

</LinearLayout>
