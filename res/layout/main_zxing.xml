<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8800ff00" >

    <FrameLayout
        android:id="@+id/zxing_frame"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="#000000"
        android:layout_centerInParent="true" >
    </FrameLayout>

    <TextView
        android:id="@+id/zxing_Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zxing_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/zxingframe_name"
		android:textColorHighlight="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/zxing_return"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="#0000ff00"
        android:textSize="20sp"
        android:text="@string/zxingframe_return" />

</RelativeLayout>
